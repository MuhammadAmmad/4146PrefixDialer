<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/phone_dual_billing_prefix_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/ic_call_blue_36dp" />

    <ImageView
        android:id="@+id/phone_international_prefix_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/phone_dual_billing_prefix_image"
        android:layout_alignTop="@id/phone_dual_billing_prefix_image"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/phone_dual_billing_prefix_image"
        app:srcCompat="@drawable/ic_flag_it" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/phone_dual_billing_prefix_image"
        android:layout_alignTop="@id/phone_dual_billing_prefix_image"
        android:layout_toRightOf="@id/phone_international_prefix_image"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phone_name"
            style="?android:textAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/phone_name"
            android:text="040123456" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/phone_action_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_textsms_grey_600_24dp" />


</RelativeLayout>
